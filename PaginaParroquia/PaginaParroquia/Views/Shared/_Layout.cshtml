<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - La Santa Cruz</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


</head>
<body>
    <nav class="navbar navbar-light navbar-fixed-top" style="background-color: #007bff; color: #fff" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


                <a href="@Url.Action("Index", "Home")" class="navbar-brand" >
                    <img src="~/Img/Logo.png" width="50" height="50" alt="">
                </a>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Información", "About", "Home")</li>
                    @*<li>@Html.ActionLink("Contacto", "Contact", "Home")</li>*@
                </ul>

                @*Logout button*@
                <ul class="nav navbar-nav navbar-right ">

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false" style="color:darkgray;"><font size="4"><b>▼</b></font></a>
                        <div class="dropdown-menu" style="background-color: #007bff;">
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="dropdown-item" href="@Url.Action("Index", "Usuarios")" role="button" aria-pressed="true" position="left">Usuarios</a>
                                <div class="dropdown-divider" style="color:white; border-color:white; color"></div>
                                <div class="dropdown-divider"></div>
                            }
                            <a class="dropdown-item" href="@Url.Action("LogOutUser", "Login")" role="button" aria-pressed="true" position="left">Cerrar Sesión</a>
                            <div class="dropdown-divider"></div>
                        </div>
                    </li>

                    
                </ul>


            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Created by Sergio Calderon De Miguel</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
 